<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExerciseActivity">

    <VideoView
            android:id="@+id/id_videoView" android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent" android:layout_height="223dp"/>
    <EditText
            android:layout_width="328dp"
            android:layout_height="152dp"
            android:inputType="textMultiLine|textPersonName"
            android:ems="10"
            android:id="@+id/id_commentBlock"
            android:layout_marginEnd="27dp"
            android:layout_marginStart="29dp"
            android:hint="@string/label_commentBlock"
            android:textAlignment="center" android:layout_marginTop="9dp" android:layout_below="@+id/id_videoView"
            android:layout_alignParentEnd="true" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_playBtn" android:layout_marginTop="14dp"
            android:layout_marginStart="132dp" android:text="@string/label_playBtn"
            android:layout_below="@+id/id_commentBlock" android:layout_alignParentEnd="true"
            android:layout_marginEnd="126dp" android:layout_alignParentStart="true" android:textAlignment="center"/>
    <TextView
            android:layout_width="107dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true" android:id="@+id/id_noVideo" android:layout_marginTop="101dp"
            android:textColor="@color/colorAccent" android:layout_alignEnd="@+id/id_playBtn"/>
</RelativeLayout>